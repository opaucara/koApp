appViewModel.init()
init = function () {
  getCurrentUrl: '/form/:id';
  areasToLoad = getModulesByHashRoute(currentUrl);
  for (){
    view = areasToLoad[i];
    var res = this.regions.getRegionNameByViewName(view);
    this.regions[res.regionName].loadTemplate(this.regions[res.regionName].viewModules[res.key]);
  }
}



